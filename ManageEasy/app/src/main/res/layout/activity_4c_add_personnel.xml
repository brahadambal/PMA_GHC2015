<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="589dp" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mallya.manageeasy.AddPersonnelActivity_4c"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:id="@+id/RelativeLayout6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/PersonnelName"
        android:id="@+id/textView_PersonnelName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/PersonnelInstance"
        android:id="@+id/textView_PersonnelInstanceName"
        android:layout_below="@+id/textView_PersonnelName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/PersonnelContact"
        android:id="@+id/textView_ContactNumber"
        android:layout_below="@+id/textView_PersonnelInstanceName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/PersonnelAddress"
        android:id="@+id/textView_Address"
        android:layout_below="@+id/textView_ContactNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/PersonnelSalary"
        android:id="@+id/textView_Salary"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView_JoinDate"
        android:layout_alignEnd="@+id/textView_JoinDate"
        android:layout_alignBottom="@+id/editText_PersonnelSalary"
        android:layout_below="@+id/editText_PersonnelAddress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Joining Date"
        android:id="@+id/textView_JoinDate"
        android:focusable="false"
        android:layout_alignBottom="@+id/editText_JoinDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/PersonnelResignDate"
        android:id="@+id/textView_ResignDate"
        android:focusable="false"
        android:layout_below="@+id/editText_JoinDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_PersonnelName"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="text"
        android:layout_toEndOf="@+id/textView_PersonnelName"
        android:layout_toRightOf="@+id/textView_PersonnelName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_PersonnelInstanceName"
        android:layout_alignTop="@+id/textView_PersonnelInstanceName"
        android:layout_alignRight="@+id/editText_PersonnelName"
        android:layout_alignEnd="@+id/editText_PersonnelName"
        android:inputType="text"
        android:layout_alignLeft="@+id/editText_PersonnelName"
        android:layout_alignStart="@+id/editText_PersonnelName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_PersonnelContact"
        android:layout_alignTop="@+id/textView_ContactNumber"
        android:layout_alignRight="@+id/editText_PersonnelInstanceName"
        android:layout_alignEnd="@+id/editText_PersonnelInstanceName"
        android:inputType="number"
        android:layout_alignLeft="@+id/editText_PersonnelInstanceName"
        android:layout_alignStart="@+id/editText_PersonnelInstanceName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_PersonnelAddress"
        android:layout_alignTop="@+id/textView_Address"
        android:layout_alignRight="@+id/editText_PersonnelContact"
        android:layout_alignEnd="@+id/editText_PersonnelContact"
        android:inputType="textMultiLine"
        android:layout_alignLeft="@+id/editText_PersonnelContact"
        android:layout_alignStart="@+id/editText_PersonnelContact" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_PersonnelSalary"
        android:layout_alignRight="@+id/editText_PersonnelAddress"
        android:layout_alignEnd="@+id/editText_PersonnelAddress"
        android:inputType="number"
        android:layout_alignLeft="@+id/editText_PersonnelContact"
        android:layout_alignStart="@+id/editText_PersonnelContact"
        android:layout_below="@+id/editText_PersonnelAddress" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_JoinDate"
        android:inputType="date"
        android:layout_below="@+id/editText_PersonnelSalary"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="38dp"
        android:layout_toEndOf="@+id/textView_PersonnelGender"
        android:layout_toRightOf="@+id/textView_PersonnelGender" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_ResignDate"
        android:inputType="date"
        android:layout_alignTop="@+id/textView_ResignDate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/editText_JoinDate"
        android:layout_alignStart="@+id/editText_JoinDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Personnel Gender"
        android:id="@+id/textView_PersonnelGender"
        android:layout_below="@+id/editText_ResignDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_PersonnelGender"
        android:layout_alignTop="@+id/textView_PersonnelGender"
        android:layout_toRightOf="@+id/textView_PersonnelGender"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/AddNewPersonnel"
            android:id="@+id/button_AddNewPersonnel"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
</LinearLayout>
    </ScrollView>