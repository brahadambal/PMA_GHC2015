<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.mallya.manageeasy.AddNewSuccessStoryActivity_4e"
    android:scrollbars="none">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:id="@+id/RelativeLayout4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/success_story_name"
        android:id="@+id/textView_successStoryName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/editText_InstanceName"
        android:layout_toStartOf="@+id/editText_InstanceName"
        android:layout_above="@+id/editText_InstitutionName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/SSPersonnelName"
        android:id="@+id/textView_PersonnelName"
        android:layout_below="@+id/editText_SuccessStoryDescription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp"
        android:layout_alignRight="@+id/textView_SuccessStoryDescription"
        android:layout_alignEnd="@+id/textView_SuccessStoryDescription" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_SuccessStoryName"
        android:inputType="text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView_successStoryName"
        android:layout_toRightOf="@+id/textView_successStoryName"
        android:layout_alignParentTop="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_PersonnelName"
        android:inputType="text"
        android:layout_alignBottom="@+id/textView_PersonnelName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/editText_SuccessStoryName"
        android:layout_alignStart="@+id/editText_SuccessStoryName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/InstitutionName"
        android:id="@+id/textView_InstitutionName"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/editText_SuccessStoryName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/editText_InstitutionName"
        android:layout_toStartOf="@+id/editText_InstitutionName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_InstitutionName"
        android:layout_alignRight="@+id/editText_PersonnelName"
        android:layout_alignEnd="@+id/editText_PersonnelName"
        android:layout_alignBottom="@+id/textView_InstitutionName"
        android:inputType="textMultiLine"
        android:layout_alignLeft="@+id/editText_SuccessStoryName"
        android:layout_alignStart="@+id/editText_SuccessStoryName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/SSDescription"
        android:id="@+id/textView_SuccessStoryDescription"
        android:layout_below="@+id/textView_InstitutionName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_SuccessStoryDescription"
        android:layout_alignBottom="@+id/textView_SuccessStoryDescription"
        android:layout_alignRight="@+id/editText_InstitutionName"
        android:layout_alignEnd="@+id/editText_InstitutionName"
        android:layout_alignLeft="@+id/editText_SuccessStoryName"
        android:layout_alignStart="@+id/editText_SuccessStoryName"
        android:inputType="textMultiLine" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/SSInstanceName"
        android:id="@+id/textView_InstanceName"
        android:layout_below="@+id/textView_PersonnelName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="64dp"
        android:layout_alignRight="@+id/textView_PersonnelName"
        android:layout_alignEnd="@+id/textView_PersonnelName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_InstanceName"
        android:layout_alignBottom="@+id/textView_InstanceName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView_PersonnelName"
        android:layout_toRightOf="@+id/textView_PersonnelName"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/SSContactNum"
        android:id="@+id/textView_contactNumber"
        android:layout_below="@+id/editText_InstanceName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_ContactSuccessStory"
        android:layout_alignBottom="@+id/textView_contactNumber"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/editText_AddressSuccessStory"
        android:layout_alignStart="@+id/editText_AddressSuccessStory"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/SSAddress"
        android:id="@+id/textView_Address"
        android:layout_below="@+id/textView_contactNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_AddressSuccessStory"
        android:layout_alignBaseline="@+id/textView_Address"
        android:layout_alignBottom="@+id/textView_Address"
        android:layout_toRightOf="@+id/textView_SuccessStoryDescription"
        android:layout_alignRight="@+id/editText_SuccessStoryDescription"
        android:layout_alignEnd="@+id/editText_SuccessStoryDescription"
        android:inputType="text" />



</RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/AddSuccessStoru"
            android:id="@+id/button_AddSuccessStory" />

        </LinearLayout>
    </ScrollView>


